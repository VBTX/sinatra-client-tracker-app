    <title>SinatraClientTrackerApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<style>
body {
  background-image: url('/images/dark-honeycomb.png');
}
  </style>
<link rel="stylesheet" href="/stylesheets/main.css"> 

  </head>
  <body>
     <div class="nav" style="text-align: center; text-shadow: 3px 2px white; font-size: 25px; text-decoration: none; a: white;">
      <% if logged_in? %>
        <a href="/logout">Log Out</a>
        <a href="/clients">Clients</a>
        <a href="/clients/new">Add New Client</a>
      <%end%>
    </div>
    <div class="wrapper">
      <% if flash[:message] %>
        <h3 style="color: blue;"><%= flash[:message] %></h3>
      <% end%>
      <% if flash[:error] %>
        <h3 style="color: red;"><%= flash[:error] %></h3>
      <% end%>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>Sinatra Client Tracker App</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
